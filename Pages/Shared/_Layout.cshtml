<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupermarketWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SupermarketWEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index" style="font-size: 1.8rem; font-weight: bold;">
                    <img src="~/images/SuperMarket.png" alt="Supermarket Icon" style="height: 50px; margin-right: 10px;" />
                    SupermarketWEB
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <img src="~/images/home.png" alt="Home Icon" style="height: 30px; vertical-align: middle; margin-right: 5px;" />
                                Home
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Categories/Index">
                                <img src="~/images/Categories.png" alt="Home Icon" style="height: 28px; vertical-align: middle; margin-right: 5px;" />
                                Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">
                                <img src="~/images/Products.png" alt="Home Icon" style="height: 35px; vertical-align: middle; margin-right: 5px;" />
                                Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/PayModes/Index">
                                <img src="~/images/PayModes.png" alt="Home Icon" style="height: 35px; vertical-align: middle; margin-right: 5px;" />
                                PayModes
                            </a>
                        </li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Customers/Index">
                                <img src="~/images/Customers.png" alt="Home Icon" style="height: 35px; vertical-align: middle; margin-right: 5px;" />
                                Customers
                            </a>
						</li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">
                                <img src="~/images/Privacy.png" alt="Home Icon" style="height: 35px; vertical-align: middle; margin-right: 5px;" />
                                Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SupermarketWEB - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>